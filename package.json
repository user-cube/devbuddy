{
  "name": "devbuddy",
  "version": "1.0.0",
  "description": "Development helper app with shortcuts, Jira tasks, and PR management",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:renderer": "vite --host 0.0.0.0 --port 3000",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "vite build",
    "dist": "npm run build:renderer && electron-builder --publish=never",
    "preview": "vite preview"
  },
  "keywords": [
    "electron",
    "react",
    "development",
    "jira",
    "github",
    "gitlab"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.6.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "vite": "^4.5.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.18.0"
  },
  "build": {
    "appId": "com.devbuddy.app",
    "productName": "DevBuddy",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "dist-renderer/**/*"
    ],
    "publish": null,
    "icon": "src/assets/devbuddy.icns",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
